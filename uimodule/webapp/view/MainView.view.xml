 <mvc:View controllerName="my.TaskManager.controller.MainView"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc">
  <App id="idAppControl" >
    <pages>
      <Page title="{i18n>title}">
        <content>
          <List id="myList" items="{
            path: '/Tasks'
            }">
            <StandardListItem title="{title}"/>
          </List>
        </content>
      </Page>
    </pages>
  </App>
</mvc:View>